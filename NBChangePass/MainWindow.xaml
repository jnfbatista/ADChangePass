<Window x:Class="NBChangePass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="3*"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>


        <Label FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0">NB Password Cycler</Label>
        <Image Source="./novabase.jpg" RenderOptions.BitmapScalingMode="HighQuality" Grid.Column="0"></Image>
        <Label FontSize="15" Margin="10,10,10,10" Grid.Column="0" Grid.Row="1">Username</Label>
        <TextBox x:Name="username" Margin="10,10,10,10" Grid.Column="1" Grid.Row="1"></TextBox>
        <Label FontSize="15" Margin="10,10,10,10" Grid.Column="0" Grid.Row="2">Password</Label>
        <PasswordBox x:Name="password" Margin="10,10,10,10" Grid.Column="1" Grid.Row="2"></PasswordBox>
        <Button x:Name="cycleButton" Content="Cycle 5 times" Margin="10,10,10,10"  Grid.Column="1" Grid.Row="3" Click="CyclePassword"></Button>

    </Grid>
</Window>
